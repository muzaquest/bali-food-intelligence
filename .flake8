[flake8]
max-line-length = 88
exclude = 
    .git,
    __pycache__,
    build,
    dist,
    .venv,
    venv,
    .env,
    env,
    .pytest_cache,
    .coverage,
    *.egg-info

ignore = 
    # E203: whitespace before ':'
    E203,
    # W503: line break before binary operator
    W503,
    # E501: line too long (handled by black)
    E501

per-file-ignores =
    # Tests can have longer lines and more complex imports
    tests/*:E501,F401,F403
    # Config files can have unused imports
    config.py:F401