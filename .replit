modules = ["python-3.11"]

[nix]
channel = "stable-24_05"

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Start Muzaquest Analytics + ML"

[workflows.workflow.tasks.preview]
port = 8000

[deployment]
run = ["sh", "-c", "streamlit run web_app_optimized.py --server.port 8000 --server.address 0.0.0.0"]
deploymentTarget = "cloudrun"

[env]
PYTHONPATH = "$PYTHONPATH:."

# ML зависимости
[[workflows.workflow.tasks]]
task = "shell.exec"
args = "pip install scikit-learn --break-system-packages"